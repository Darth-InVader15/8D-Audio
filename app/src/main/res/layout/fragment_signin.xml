<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
<FrameLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".signinFragment">


    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:background="#F70F0F0F">


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textSize="35sp" android:text="SignIn"
                  android:textStyle="bold"
                  android:textColor="@color/colorAccent"
                  android:fontFamily="casual"
                  android:layout_marginStart="4dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="92dp"
                  app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="to MusicX" android:textColor="#EEFF"
                  android:fontFamily="serif-monospace"
                  android:textStyle="bold"
                  android:textSize="19sp" app:layout_constraintStart_toEndOf="@+id/textView"
                  android:layout_marginStart="8dp" android:layout_marginTop="24dp"
                  app:layout_constraintTop_toTopOf="@+id/textView"/>


        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:hint="Enter your Email"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                  android:layout_marginTop="140dp"
                  android:textColor="#EEF"
                  android:background="#E8252424"
                  android:textColorHint="#EEF"
                  android:fontFamily="casual"
                  android:id="@+id/edt_signinEmail"
                  app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintHorizontal_bias="0.0"
                  />

        <EditText android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/edt_signinEmail"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                  android:hint="Enter your Password"
                  android:textColor="#EEF"
                  android:textColorHint="#EEF"
                  android:inputType="textPassword"
                  android:id="@+id/edt_signinPassword"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                  android:background="#E8252424"/>

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Sign In" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_signinPassword" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:textColor="#EEFF"
                android:id="@+id/button_signin"
                android:background="@color/colorAccent"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="New user? Register here"
                  android:layout_marginTop="36dp"
                  android:textColor="#EEF"
                  android:id="@+id/txtv_register"
                  app:layout_constraintTop_toBottomOf="@+id/edt_signinPassword"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Forgot Password"
                  android:textColor="#EEFF" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toBottomOf="@+id/txtv_register" app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="8dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
</layout>