<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".infoFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"

            android:layout_height="match_parent" android:background="#ED090808">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="@color/colorAccent"
                  android:text="__NOTE__"
                  android:textStyle="bold"
                  android:textSize="30sp" android:layout_marginEnd="8dp"
                  android:fontFamily="serif-monospace"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="104dp"
                  app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.498"
                  android:id="@+id/textView"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="This is *ver 1.0 alpha build (unreleased)* of MusicX Ambisonic Audio Player. Many features may not work properly. Please report any such feature to the developer. \nAyush Singh (\@_neural.network_ :Instagram), \@officialPirate (Twitter) \n\n\n And please be assured that the future versions of this app will be error free \:) \n\n\n\ PLEASE NOTE THAT DUE TO LIMITATIONS OF HARDWARE AND ANDROID OS THIS APP IS NOT AS GOOD AS IT'S PC COUNTERPART \nTry the PC version : www.cupepy.ml"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginTop="64dp"
                  android:fontFamily="casual"
                  android:textStyle="bold"
                  android:textColor="#EEF"
                  android:layout_marginStart="5dp"
                  app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp" android:id="@+id/textView2"/>


        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="NEXT"
                android:id="@+id/button_skipInfo"
                android:background="@color/colorAccent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>